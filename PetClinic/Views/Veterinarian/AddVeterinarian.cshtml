@model AddVeterinarianViewModel

@{
    ViewData["Title"] = "Добави ветеринар";
}

<div class="text-center">
    <form asp-controller="Veterinarian" asp-action="AddVeterinarian" method="post">
        <div class="mb-3">
            <label asp-for="@Model.FullName" class="form-label">Име и фамилия</label>
            <input asp-for="@Model.FullName" class="form-control" aria-required="true" />
            <span asp-validation-for="@Model.FullName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Telephone" class="form-label">Телефон</label>
            <input asp-for="@Model.Telephone" class="form-control" aria-required="true" />
            <span asp-validation-for="@Model.Telephone" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Specialization" class="form-label">Специализация</label>
            <select asp-for="@Model.Specialization" class="form-control">
                @foreach (var category in @Model.Specializations)
                {
                    <option value="@category.SpecializationId">@category.Name</option>
                }
            </select>
            <span asp-validation-for="@Model.Specialization" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input class="btn btn-primary" type="submit" value="Добави ветеринар" />
        </div>
    </form>
</div>
