@model AddPetViewModel

@{
    ViewData["Title"] = "Добави животно";
}

<div class="text-center">
    <form asp-controller="Pet" asp-action="AddPet" method="post">
        <div class="mb-3">
            <label asp-for="@Model.Name" class="form-label">Име</label>
            <input asp-for="@Model.Name" class="form-control" aria-required="true" />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.DateOfBirth" class="form-label">Дата на раждане</label>
            <input asp-for="@Model.DateOfBirth" class="form-control" aria-required="true" />
            <span asp-validation-for="@Model.DateOfBirth" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Breed" class="form-label">Порода</label>
            <input asp-for="@Model.Breed" class="form-control" aria-required="true" />
            <span asp-validation-for="@Model.Breed" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Gender" class="form-label">Пол</label>
            <input asp-for="@Model.Gender" class="form-control" aria-required="true" />
            <span asp-validation-for="@Model.Gender" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Color" class="form-label">Цвят</label>
            <input asp-for="@Model.Color" class="form-control" aria-required="true" />
            <span asp-validation-for="@Model.Color" class="text-danger"></span>
        </div>
        @*<div class="mb-3">
            <label asp-for="@Model.Image" class="form-label">Снимка</label>
            <input asp-for="@Model.Image" class="form-control" aria-required="true" />
            <span asp-validation-for="@Model.Image" class="text-danger"></span>
        </div>*@
        <div class="mb-3">
            <label asp-for="@Model.Weight" class="form-label">Тегло</label>
            <input asp-for="@Model.Weight" class="form-control" aria-required="true" />
            <span asp-validation-for="@Model.Weight" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input class="btn btn-primary" type="submit" value="Добави животно" />
        </div>
    </form>
</div>
