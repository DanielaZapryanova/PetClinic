@model EditOwnerViewModel

@{
    ViewData["Title"] = "Редактирай собственик";
}

<div class="text-center">
    <form asp-controller="Owner" asp-action="AddOwner" method="post">
        <div class="mb-3">
            <label asp-for="@Model.FullName" class="form-label">Име</label>
            <input asp-for="@Model.FullName" class="form-control" aria-required="true" />
            <span asp-validation-for="@Model.FullName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Address" class="form-label">Адрес</label>
            <input asp-for="@Model.Address" class="form-control" aria-required="true" />
            <span asp-validation-for="@Model.Address" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Age" class="form-label">Години</label>
            <input asp-for="@Model.Age" class="form-control" aria-required="true" />
            <span asp-validation-for="@Model.Age" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Telephone" class="form-label">тТелефон</label>
            <input asp-for="@Model.Telephone" class="form-control" aria-required="true" />
            <span asp-validation-for="@Model.Telephone" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input class="btn btn-primary" type="submit" value="Редактирай собственик" />
        </div>
    </form>
</div>
