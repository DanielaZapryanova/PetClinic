@model IEnumerable<VisitViewModel>

@{
    ViewData["Title"] = "Всички посещения";
}

<div class="text-center row">

    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
        <ul class="navbar-nav flex-grow-1">
            <button><a class="nav-link text-dark" asp-controller="Visits" asp-action="AddVisit">Добави посещение</a></button>
            <button><a class="nav-link text-dark" asp-controller="Visits" asp-action="AddVaccination">Добави ваксинация</a></button>
        </ul>
    </div>
    <p>Посещения</p>
    @foreach (var visit in Model)
    {
        <div class="card col-4" style="width: 20rem; ">
            <div class="card-body">
                <p class="mb-0">Дата на посещението: @visit.Date</p>
            </div>
            <div class="card-body">
                <p class="mb-0">Цена: @visit.Price</p>
            </div>
            <div class="card-body">
                <p class="mb-0">Причина: @visit.ReasonForVisit.ToFriendlyString()</p>
            </div>
        </div>
    }
</div>
